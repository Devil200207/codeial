<div class="post-comments-list">
    <ul>
        <%for(comment of post.comments){%>
          
           <li>
               <p>
                   <% if((locals.user) && (locals.user.id == comment.user.id)){%>
                       <small>
                           <a href="/comments/destroy/<%= comment.id %>">delete it</a>
                       </small>
                   <%}%>
                   <%= comment.content%>
                   <br>
                   <small>
                       <%= comment.user.name%>
                   </small>
               </p>
           </li>

        <%}%>
    </ul>

</div>